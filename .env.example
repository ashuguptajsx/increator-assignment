# Environment Variables Template
# Copy this file to .env and fill in your actual values

# ==================== DATABASE ====================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=increator
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here

# ==================== REDIS ====================
REDIS_HOST=localhost
REDIS_PORT=6379

# ==================== AI SERVICES ====================
OPENAI_API_KEY=sk-your-openai-api-key-here
PINECONE_API_KEY=pcsk_your-pinecone-api-key-here

# ==================== AWS ====================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# SQS Queue URLs
INSTAGRAM_SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789/instagram-queue
YOUTUBE_SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789/youtube-queue
TIKTOK_SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789/tiktok-queue
TWITTER_SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789/twitter-queue

# S3 Buckets
S3_MEDIA_BUCKET=increator-media-prod
S3_BACKUP_BUCKET=increator-backups-prod

# ==================== PLATFORM API KEYS ====================
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
YOUTUBE_API_KEY=your-youtube-api-key
TIKTOK_ACCESS_TOKEN=your-tiktok-access-token
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# ==================== APPLICATION ====================
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# ==================== SECURITY ====================
JWT_SECRET=your-jwt-secret-key-here
API_RATE_LIMIT=100

# ==================== MONITORING ====================
DATADOG_API_KEY=your-datadog-api-key
SENTRY_DSN=your-sentry-dsn
